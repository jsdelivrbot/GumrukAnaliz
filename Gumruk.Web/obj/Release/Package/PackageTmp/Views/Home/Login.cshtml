    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/Content/foot-logo.png" width="100" height="100" />
            <p id="profile-name" class="profile-name-card">Gümrük ve Ticaret Bakanlığı</p><p  id="profile-name" class="profile-name-card"> Analiz Portalı</p>
            <form class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <div style="margin-bottom: 15px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" id="userName" class="form-control" placeholder="Kullanıcı Adı" required autofocus onfocus="MessageClose()">
                </div>
                <div style="margin-bottom: 15px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" id="inputPassword" class="form-control" placeholder="Şifre" required onfocus="MessageClose()" onkeypress="return SystemEnter(event)">
                </div>

                @*<div id="remember" class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>*@
                <a href="javascript:void(0)" class="btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12" onclick="Login()" id="loginbutton" onfocus="MessageClose()">Giriş</a>
                <br /><br />
            </form>
        <div class="alert alert-danger" id="message" style="display:none;">

        </div>
        </div><!-- /card-container -->
    </div><!-- /container -->

    <script>
        function SystemEnter(e) {
            if(e.keyCode==13)
            {
                Login();
            }
        }

        function MessageClose() {
            $("#message").hide();
           
        }
        function Login() {
            var userName = $("#userName").val();
            var pass = $("#inputPassword").val();
            $("#loginbutton").addClass("disabled");
            $("#loginbutton").text("giriş yapılıyor");
            rotation();
            $.ajax({
                url: 'Login',
                type: "POST",
                cache: false,
                async: true,
                data: { loginname: userName, password: pass },
                success: function (text, data) {
                    window.location.href = "GetSchemasPage";
                },
                error: function (jqXhr, textStatus, errorThrown) {
                    $("#loginbutton").removeClass("disabled");
                    $("#message").html("Kullanıcı adı ve/veya şifre yanlış");
                    $("#message").show();
                    $("#loginbutton").text("Giriş");
                    $("#profile-img").stopRotate();
                }
            });
        }

        var rotation = function () {
            $("#profile-img").rotate({
                angle: 0,
                animateTo: 360,
                callback: rotation,
                easing: function (x, t, b, c, d) {        // t: current time, b: begInnIng value, c: change In value, d: duration
                    return c * (t / d) + b;
                }
            });
        }
        
    </script>
