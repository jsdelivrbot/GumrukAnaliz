@model List<Gumruk.Entity.Ulkeler>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ülke Kodu</th>
            <th colspan="2">Ülke Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UlkeKodu</td>
                <td>
                    <span>@item.UlkeAdi</span>
                </td>
                <td><button id="sec" class="btn btn-primary" onclick="UlkeSecildi(@item.ID,'@item.UlkeKodu','@item.UlkeAdi')">Seç</button></td>
            </tr>
        }
    </tbody>
</table>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
</div>
<input type="hidden" id="beyanTurKodu" />

<script>
    function UlkeSecildi(ID,kod,ulke) {

        $("#txtBosaltmaUlkesi").val(kod + " / " +ulke);
        $("#txtBosaltmaUlkeID").val(ID);
        $("#myModal").modal('hide');
    }
</script>



