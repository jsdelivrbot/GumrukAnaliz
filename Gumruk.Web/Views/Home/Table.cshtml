@model Gumruk.Entity.d_b_tables

<div class="table-responsive" style="max-height:400px;overflow-y:auto;overflow-x:hidden;">
    <div class="row">
        <div class="col-lg-2"><strong>Schema Name</strong></div>
        <div class="col-lg-6"><strong>Name</strong></div>
        <div class="col-lg-4"><strong>Açıklamalar</strong></div>
    </div>


    <div class="row">
        <div class="col-lg-2">@Model.d_b_schemas.name</div>
        <div class="col-lg-6">@Model.name </div>
        <div class="col-lg-4">
            <span class="darkyellow">&nbsp;&nbsp;&nbsp;column count :</span> @Model.d_b_columns.Count<br />
            @foreach (var item2 in Model.d_b_table_explanation)
            {
                @item2.details<br />
            }
        </div>
    </div>


    <div class="row" style="padding-left:25px;">
        <div class="row padding15"><h5>Columns</h5></div>
        <div class="row" id="columns_@Model.id">
            <div class="col-lg-12">
                <div class="row" style="border-bottom:1px solid #f5f5f5;">
                    <div class="col-lg-3"><strong>Name</strong></div>
                    <div class="col-lg-9"><strong>Açıklamalar</strong></div>
                </div>
                @foreach (var itemColumn in Model.d_b_columns)
                {
                    <div class="row" style="border-bottom:1px solid #f5f5f5;">
                        <div class="col-lg-2">
                            @itemColumn.name
                        </div>
                        <div class="col-lg-10">
                            @if (itemColumn.d_b_column_explanations.Count > 0 && itemColumn.d_b_column_explanations.Count > 1)
                            {
                                <a href="javascript:void(0)" data-toggle="collapse" data-target="#columnsexp_@itemColumn.id">Aciklamalar</a>
                                <div id="columnsexp_@itemColumn.id" class="collapse">
                                    @foreach (var item2 in itemColumn.d_b_column_explanations)
                                    {
                                        @item2.details<br />
                                    }
                                </div>
                            }
                            else if (itemColumn.d_b_column_explanations.Count == 1)
                            {
                                foreach (var item2 in itemColumn.d_b_column_explanations)
                                {
                                    @item2.details<br />
                                }
                            }

                        </div>
                    </div>
                }
            </div>



        </div>
    </div>



</div>