@model List<Gumruk.Entity.Limanlar>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ülke Kodu</th>
            <th colspan="2">Ülke Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LimanKodu</td>
                <td>
                    <span>@item.LimanAdi</span>
                </td>
                <td><button id="sec" class="btn btn-primary" onclick="LimanSecildi(@item.ID,'@item.LimanKodu','@item.LimanAdi')">Seç</button></td>
            </tr>
        }
    </tbody>
</table>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
</div>
<input type="hidden" id="beyanTurKodu" />

<script>
    function LimanSecildi(ID,kod,liman) {
        $("#txtBosaltmaLimani").val(kod+" / "+liman);
        $("#hdnBosaltmaLimani").val(ID);
        $("#myModal").modal('hide');
    }
</script>



