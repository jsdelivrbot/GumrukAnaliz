        zoomin = parseFloat(zoomin) + 0.1;
        console.log(zoomin);
        $("#imgDiv").animate({ 'zoom': zoomin }, 400);
        $("#zoomCount").val(zoomin);
    }

    function zoomout() {
        var zoomin = $("#zoomCount").val();
        zoomin = parseFloat(zoomin) - 0.1;
        console.log(zoomin);
        $("#imgDiv").animate({ 'zoom': zoomin }, 400);
        $("#zoomCount").val(zoomin);
    }
